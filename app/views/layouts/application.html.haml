- content_for :page_title, ' - GOV.UK Registers'

- content_for :inside_header do
  %strong.beta-badge Beta

- content_for :global_header_text, 'GOV.UK <span id="product-name">Registers</span>'.html_safe

- content_for :homepage_url, "/"

- content_for :header_class, "with-proposition"

- content_for :proposition_header do
  .header-proposition
    .content
      = link_to "Menu", "#proposition-links", class: "js-header-toggle menu"
      %nav{id: "proposition-menu"}
        %ul#proposition-links
          %li
            = link_to "Support", "https://registers.cloudapps.digital/support", target: :blank
          - if user_signed_in?
            %li
              = link_to current_user.email, current_user
            %li
              = link_to "Log out", destroy_user_session_path, method: :delete

- content_for :head do
  = stylesheet_link_tag 'application'
  = csrf_meta_tags

- content_for :content do
  %main#content{role:'main', tabindex: "-1"}
    - if alert
      .grid-row
        .column-two-thirds
          .flash.flash--dangerous= alert
    - if notice
      .grid-row
        .column-two-thirds
          .flash.flash--notice= notice
    = content_for?(:main) ? yield(:main) : yield

- content_for :body_end do
  = javascript_include_tag 'application'
  = yield(:javascript)

= render file: 'layouts/govuk_template'
