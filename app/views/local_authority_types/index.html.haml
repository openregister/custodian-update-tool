= content_for :page_title, "Local Authority Type Register"

= link_to "Back", root_path, class: "link-back"

%header.page-header
  .grid-row
    .column-two-thirds
      %h1.heading-large Local authority type register
    .column-one-third
      = link_to "Add a new local authority type", new_local_authority_type_path, class: "button align-with-heading"

.js-filter-list
  %form{class: "js-filter-form"}
    %fieldset
      .form-group
        %label{class: "form-label", for: "search"} Search for a local authority type
        %input{name: "search", id: "search", class: "form-control"}

%table
  %thead
    %tr
      %th Local Authority Type
      %th Name
      %th

  %tbody{class: "js-filter-block"}
    - @local_authority_types.order(:name).each do |local_authority_type|
      %tr{class: "js-filter-item", "data-filter-terms" => "#{local_authority_type.name}"}
        %td= local_authority_type.code
        %td= local_authority_type.name
        %td= link_to 'Update', edit_local_authority_type_path(local_authority_type)

= content_for :javascript do
  :javascript
    jQuery(function($) {
      GOVUK.filterListItems.init();
    });
