= content_for :page_title, "Local Authority Type Register"

= link_to "Back", local_authority_types_path, class: "link-back"

%h1.heading-xlarge= @local_authority_type.code

%table
  %thead
    %tr
      %th Fields
      %th Values

  %tbody
    %tr
      %td Local Authority Type
      %td= @local_authority_type.code
    %tr
      %td Name
      %td= @local_authority_type.name
