= content_for :page_title, 'Reset your password?'

= link_to "Back", new_user_session_path, class: "link-back"
= devise_error_messages!
%h1.heading-large Reset your password
%p Enter your email and we'll send you instructions for setting up a new password
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
  = f.email_field :email
  .form-group
    = f.submit "Submit", class: "button"
