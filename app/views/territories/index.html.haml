= content_for :page_title, "Territory Register"

= link_to "Back", root_path, class: "link-back"

%header.page-header
  .grid-row
    .column-two-thirds
      %h1.heading-large Territory register
    .column-one-third
      = link_to "Add a new territory", new_territory_path, class: "button align-with-heading"

.js-filter-list
  %form{class: "js-filter-form"}
    %fieldset
      .form-group
        %label{class: "form-label", for: "search"} Search for a territory
        %input{name: "search", id: "search", class: "form-control"}

%table
  %thead
    %tr
      %th Territory
      %th Name
      %th Official name
      %th

  %tbody{class: "js-filter-block"}
    - @territories.order(:name).each do |territory|
      %tr{class: "js-filter-item", "data-filter-terms" => "#{territory.official_name} #{territory.name}"}
        %td= territory.code
        %td= territory.name
        %td= territory.official_name
        %td= link_to 'Update', edit_territory_path(territory)

= content_for :javascript do
  :javascript
    jQuery(function($) {
      GOVUK.filterListItems.init();
    });
